<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="@color/s"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
    <EditText
        android:layout_width="match_parent"
        android:text="Marker"
        android:maxLines="1"
        android:editable="false"
        android:gravity="center"
        android:textStyle="bold"
        android:scrollbars="vertical"
        android:textSize="35dp"
        android:id="@+id/edit"
        android:layout_margin="25dp"
        android:layout_height="wrap_content"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_margin="7dp"
            android:text="Средняя арифметическая оценка:"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_margin="15dp"
            android:textSize="100dp"
            android:id="@+id/result"
            android:elevation="5dp"
            android:text="↓"
            android:layout_gravity="center"
            android:background="@drawable/result_bc"/>
    </LinearLayout>
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_alignParentBottom="true">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:layout_centerVertical="true"
        android:adjustViewBounds="false"
        android:cropToPadding="false"
        android:elevation="50dp"
        android:scaleType="centerCrop"
        android:src="@drawable/keyboard_shadow" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:orientation="vertical"
        android:background="#FFFFFF"
        android:elevation="50dp"

        >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="#FFFFFF">
        <Button
            android:layout_width="wrap_content"
            android:layout_height="60dp"
            android:layout_weight="1"
            android:textSize="35dp"
            android:background="#FFFFFF"
            android:textColor="@color/five"
            android:gravity="center"
            android:id="@+id/five"
            android:onClick="onClickMark"
            android:text="5"/>
        <Button
            android:layout_width="wrap_content"
            android:layout_height="60dp"
            android:layout_weight="1"
            android:background="#FFFFFF"
            android:textSize="35dp"
            android:textColor="@color/four"
            android:gravity="center"
            android:onClick="onClickMark"
            android:id="@+id/four"
            android:text="4"
    />
        <Button
            android:layout_width="wrap_content"
            android:layout_height="60dp"
            android:background="#FFFFFF"
            android:layout_weight="1"
            android:id="@+id/three"
            android:textSize="35dp"
            android:textColor="@color/three"
            android:gravity="center"
            android:onClick="onClickMark"
            android:text="3"/>
    </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:orientation="horizontal"
            android:background="#FFFFFF"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textSize="10dp"
                android:id="@+id/five_count"
                android:background="#FFFFFF"
                android:textColor="@color/five"
                android:gravity="center"
                android:onClick="onClickMark"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/four_count"
                android:layout_weight="1"
                android:textSize="10dp"
                android:background="#FFFFFF"
                android:textColor="@color/four"
                android:gravity="center"
                android:onClick="onClickMark"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textSize="10dp"
                android:id="@+id/three_count"
                android:background="#FFFFFF"
                android:textColor="@color/three"
                android:gravity="center"
                android:onClick="onClickMark"
                />
        </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_gravity="center"
        android:orientation="horizontal"
        android:background="#FFFFFF"
        >
        <Button
            android:layout_width="wrap_content"
            android:layout_height="60dp"
            android:layout_weight="1"
            android:textSize="35dp"
            android:id="@+id/two"
            android:background="#FFFFFF"
            android:textColor="@color/two"
            android:gravity="center"
            android:onClick="onClickMark"
            android:text="2"/>
        <Button
            android:layout_width="wrap_content"
            android:layout_height="60dp"
            android:id="@+id/one"
            android:layout_weight="1"
            android:textSize="35dp"
            android:background="#FFFFFF"
            android:textColor="@color/one"
            android:gravity="center"
            android:onClick="onClickMark"
            android:text="1"
            />
        <Button
            android:layout_width="wrap_content"
            android:layout_height="60dp"
            android:layout_weight="1"
            android:textSize="35dp"
            android:id="@+id/empty"
            android:background="#FFFFFF"
            android:textColor="@color/empty"
            android:gravity="center"
            android:onClick="onClickMark"
            android:text="Н"/>
    </LinearLayout>
        <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:orientation="horizontal"
        android:background="#FFFFFF"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textSize="10dp"
            android:id="@+id/two_count"
            android:background="#FFFFFF"
            android:textColor="@color/two"
            android:gravity="center"
            android:onClick="onClickMark"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/one_count"
            android:layout_weight="1"
            android:textSize="10dp"
            android:background="#FFFFFF"
            android:textColor="@color/one"
            android:gravity="center"
            android:onClick="onClickMark"

            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textSize="10dp"
            android:id="@+id/empty_count"
            android:background="#FFFFFF"
            android:textColor="@color/empty"
            android:gravity="center"
            android:onClick="onClickMark"
            />
    </LinearLayout>

        <Button
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:background="#FFFFFF"
            android:gravity="center"
            android:textSize="25dp"
            android:text="Удалить"
            android:id="@+id/clear"
            android:onClick="onClickClear"
            android:textColor="@color/clear"/>
    </LinearLayout>
</LinearLayout>
</RelativeLayout>